                    $short = mb_strlen($desc) > 200 ? mb_substr($desc, 0, 197) . '...' : $desc;
                ?>
                <article class="tipo-card card">
                    <div class="card-body">
                        <h3 class="tipo-title"><a href="<?= url('tipos/' . (int)$tipo['id_tipo']) ?>"><?= htmlspecialchars($tipo['nombre']) ?></a></h3>
                        <p class="descripcion"><?= htmlspecialchars($short) ?></p>
                    </div>
                </article>
            <?php endforeach; ?>
        </div>
