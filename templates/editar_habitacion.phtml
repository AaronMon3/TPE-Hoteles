<!DOCTYPE html>
<html>
<head><title>Editar Habitación</title></head>
<body>
    <h1>Editar Habitación</h1>
    <form method="POST">
        <input name="numero" value="<?php echo $habitacion['numero']; ?>" required><br>
        <input name="precio" type="number" step="0.01" value="<?php echo $habitacion['precio']; ?>" required><br>
        <select name="id_hotel" required>
            <?php foreach ($hoteles as $hotel): ?>
                <option value="<?php echo $hotel['id_hotel']; ?>" <?php if ($hotel['id_hotel'] == $habitacion['id_hotel']) echo 'selected'; ?>><?php echo $hotel['nombre']; ?></option>
            <?php endforeach; ?>
        </select><br>
        <select name="id_tipo" required>
            <?php foreach ($tipos as $tipo): ?>
                <option value="<?php echo $tipo['id_tipo']; ?>" <?php if ($tipo['id_tipo'] == $habitacion['id_tipo']) echo 'selected'; ?>><?php echo $tipo['nombre']; ?></option>
            <?php endforeach; ?>
        </select><br>
        <input name="imagen_url" value="<?php echo $habitacion['imagen_url']; ?>" placeholder="URL Imagen"><br>
        <button type="submit">Actualizar</button>
    </form>
                    <br><a href="<?= BASE_URL ?>/admin/habitaciones">Volver</a>
</body>
</html>