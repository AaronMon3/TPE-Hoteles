RewriteEngine On
Options -Indexes

RewriteBase /hoteles/

RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

RewriteRule ^(.*)$ index.php?action=$1 [QSA,L]

<FilesMatch "^(config\.php|\.htaccess|.*\.sql)$">
    Order deny,allow
    Deny from all
</FilesMatch>
